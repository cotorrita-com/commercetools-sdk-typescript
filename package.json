{
  "name": "commercetools-sdk-typescript",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "manypkg check && preconstruct dev",
    "generate": "manypkg run generate && yarn format",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "build": "preconstruct build",
    "test": "jest --maxWorkers=2",
    "coverage": "codecov",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.15.0",
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@manypkg/cli": "0.18.0",
    "@preconstruct/cli": "2.1.4",
    "@types/jest": "27.0.1",
    "@types/node": "^15.9.0",
    "babel-jest": "27.2.0",
    "codecov": "^3.8.3",
    "husky": "7.0.2",
    "jest": "27.2.0",
    "jest-junit": "12.2.0",
    "jest-watch-typeahead": "0.6.4",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.5",
    "tsc-files": "1.1.2",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write"],
    "*.ts": ["prettier --write", "tsc-files --noEmit"]
  },
  "preconstruct": {
    "packages": ["packages/*"]
  }
}
